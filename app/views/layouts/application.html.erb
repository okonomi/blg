<!DOCTYPE html>
<html>
  <head>
    <title>Blg</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if flash[:success] %>
      <p><%= flash[:success] %></p>
    <% end %>

    <% if logged_in? %>
      <%= link_to 'Logout', logout_path, method: :delete %>
    <% else %>
      <%= link_to 'Login', login_path %>
    <% end %>
    <%= yield %>
  </body>
</html>
