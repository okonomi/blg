<%= form_with model: post do |f| %>
  <div class="field">
    <div class="control">
      <%= f.text_field :title, class: 'input', placeholder: 'Title' %><br>
    </div>
  </div>
  <div class="field">
    <div class="control">
      <%= f.text_area :content, class: 'textarea', rows: 40, placeholder: 'Content' %><br>
    </div>
  </div>

  <div class="control">
    <%= f.submit class: 'button is-link' %>
  </div>
<% end %>
