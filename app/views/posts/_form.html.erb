<%= form_with model: post do |f| %>
  <div class="field">
    <div class="control">
      <%= f.date_field :posted_at, class: 'input' %>
    </div>
  </div>
  <div class="field">
    <div class="control">
      <%= f.text_field :title, class: 'input is-large', placeholder: 'Title' %>
    </div>
  </div>
  <div class="field">
    <div class="control">
      <%= f.rich_text_area :content, class: 'textarea', rows: 40, placeholder: 'Content' %>
    </div>
  </div>

  <div class="control">
    <%= f.submit class: 'button is-link' %>
  </div>
<% end %>
